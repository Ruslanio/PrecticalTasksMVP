<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Label.Description">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="Label.Headline">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="Label.Secondary">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/black_secondary</item>
    </style>

    <style name="Label.Secondary.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Label.Highlight">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.Highlight.Green">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LabelNewsArticle" parent="Label.Highlight">
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Label.Highlight.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Label.Link">
        <item name="android:textColor">@color/leaf</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/leaf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/leaf_half_transparent</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>
    <style name="Button.Green">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EditText">
        <item name="android:padding">@dimen/medium_padding</item>
    </style>
    
    <style name="EditText.White">
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">@drawable/edittext_background_white</item>
        <item name="android:drawableLeft">@drawable/search_small</item>
        <item name="android:drawableRight">@drawable/mic</item>
    </style>

    <style name="SeacrhTabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
